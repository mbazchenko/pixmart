{% for product in products %}
<article class="product-card">
  <a class="product-card__link" href="#">
    <div class="product-card__image-wrapper">
      <img class="product-card__image" src="{{ product.image }}" loading="lazy" width="305" height="272" alt="{{ product.alt }}"/>
      <div class="product-card__overlay">
        <button class="product-card__overlay-button button button--primary">
          Go to product
        </button>
      </div>

{% if loop.index <= 2 %}
  <span class="product-card__label element">
    {{ icon('trophy', 'product-card__label-icon icon') }}
  </span>
{% endif %}
    </div>
    <div class="product-card__info-wrapper">
      <div class="product-card__header-wrapper">
        <h3 class="product-card__title">{{ product.title }}</h3>
        <small class="product-card__price">{{ product.price }}</small>
      </div>
      <span class="product-card__subtitle">{{ product.subtitle }}</span>
    </div>
  </a>
</article>
{% endfor %}